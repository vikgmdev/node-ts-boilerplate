{
  "name": "node-ts-boilerplate",
  "version": "0.0.0",
  "description": "A fully setup node/ts basecode to speed up the development of any new project",
  "main": "src/index.ts",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint . --max-warnings=0 --ext .js,.ts --ignore-path .gitignore --ignore-pattern '!.eslintrc.js' --ignore-pattern '!.prettierrc.js'",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "serve": "nodemon -r ts-node/register/transpile-only src/index.ts | pino-pretty",
    "start": "export ENV=dev && npm run serve",
    "start-debug": "nodemon -r ts-node/register/transpile-only --inspect src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check -- -s"
    }
  },
  "lint-staged": {
    "*.{css,js,json,md,ts,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikgmdev/node-ts-boilerplate.git"
  },
  "author": "Victor Garcia <vikgm.dev@gmail.com>",
  "engines": {
    "node": "10.14.1 - 14.x",
    "npm": "^6.8.0"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vikgmdev/node-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/vikgmdev/node-ts-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@types/supertest": "^2.0.11",
    "@types/type-is": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "yargs-parser": "^20.2.7"
  }
}
